
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Forms</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        @using (Html.BeginForm("AddForm", "Home", FormMethod.Post))
        {
            @model CRUDApp.Models.MyModel
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Basic Form Elements
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">

                                    @Html.HiddenFor(m => m.id)
                                    <div class="form-group">
                                        <label>Name</label>
                                        @Html.TextBoxFor(m => m.ename, new { @class = "form-control", @required = "required" })
                                        <i class="text-danger">@Html.ValidationMessageFor(m => m.ename)</i>
                                    </div>
                                    <div class="form-group">
                                        <label>Salary</label>
                                        @Html.TextBoxFor(m => m.salary, new { @class = "form-control", @required = "required" })
                                        <i class="text-danger">@Html.ValidationMessageFor(m => m.salary)</i>
                                    </div>
                                    <div class="form-group">
                                        <label>City</label>
                                        @Html.TextBoxFor(m => m.city, new { @class = "form-control", @required = "required" })
                                        <i class="text-danger">@Html.ValidationMessageFor(m => m.city)</i>
                                    </div>
                                    <div class="form-group">
                                        <label>Department</label>
                                        @Html.TextBoxFor(m => m.depart, new { @class = "form-control", @required = "required" })
                                        <i class="text-danger">@Html.ValidationMessageFor(m => m.depart)</i>
                                    </div>
                                    <button type="submit" class="btn btn-default">Submit Button</button>
                                    <button type="reset" class="btn btn-default">Reset Button</button>

                                </div>

                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        }
    </div>

</div>





